#!/usr/bin/env bash

set -Eeuo pipefail

cd "$(dirname "$0")/.."

pybabel extract -F ./babel.ini -o betty.pot --project 'Ancestry' --copyright-holder 'Bart Feenstra' ./ancestry ./resources

mkdir -p ./resources/locale
while read -r locale_directory_path; do
  language=$(basename "$locale_directory_path")
  pybabel update -d ./resources/locale -l "$language" -D betty -i ./betty.pot
done < <(find ./resources/locale/ -mindepth 1 -maxdepth 1 -type d)
